generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  username String @db.VarChar(120)
  password String @db.VarChar(120)
  id       Int    @id @default(autoincrement())
  role     Int
}

model Library {
  code String @id @db.VarChar(50)
  name String @db.VarChar(100)
}

enum Roles {
  Readonly
  User
  Admin
}
